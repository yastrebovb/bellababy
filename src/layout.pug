doctype html
html(lang='en')
  head
    title BellaBaby - детские автокресла оптом
    meta(name='description', content='BellaBaby - детские автокресла оптом')
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://fonts.googleapis.com/css?family=Montserrat:400,600', rel='stylesheet')
  body
    header.header
      .container
        nav.header__nav.header__nav--desktop
          a(href="#hero") 
            img.header__logo(src="./public/logo.png", alt="BellaBaby логотип")
          a(href="#about") О бренде
          a(href="#catalog") Каталог
          a(href="#contacts") Контакты
          a(href="") 
            img.header__phone(src="./public/phone.png", alt="")
        nav.header__nav.header__nav--mobile
          .header__nav
            a(href="#hero")
              img.header__logo(src="./public/logo.png", alt="BellaBaby логотип")
            img.header__menu(src="./public/icons/menu.svg", alt="")
          .header__nav__content 
            a(href="#about") О нас
            a(href="#catalog") Каталог
            a(href="#contacts") Контакты
    main
      block content
    footer.footer
      .container
        nav.footer__nav
          a(href="#about") О нас
          a(href="#catalog") Каталог
          a(href="#contacts") Контакты
        img.footer__logo(src="./public/logo.png", alt="BellaBaby логотип")
        .footer__contacts
          a(href="") info@bellababy.ru
          a(href="") 
            img.footer__phone(src="./public/phone.png", alt="")